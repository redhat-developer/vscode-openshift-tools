{
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "node",
        "outDir": "../../out",
        "target": "es6",
        "jsx": "react",
        "typeRoots": [
            "../../node_modules/@types",
            "@types"
        ],
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "incremental": true,
    },
    "include": [
        "*/app/**/*.ts",
        "*/app/**/*.tsx",
        "common/*.tsx",
        "common/*.ts",
        "create-deployment/pages/builderImageListItem.tsx",
        "create-deployment/pages/builderConfig.tsx",
        "../devfile-registry/devfileInfo.ts"
    ],
}
