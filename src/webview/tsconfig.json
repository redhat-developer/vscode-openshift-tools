{
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "node",
        "outDir": "../../out/webview",
        "target": "es6",
        "jsx": "react",
        "typeRoots": [
            "../../node_modules/@types",
            "@types"
        ],
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noEmit": true,
        "incremental": true,
    },
    "include": [
        "*/app/**/*.ts",
        "*/app/**/*.tsx",
        "common/*.tsx",
        "common/*.ts"
    ],
    "exclude": [
        "*/*.ts"
    ]
}
