{
    "name": "vscode-openshift-tools",
    "displayName": "vscode-openshift-tools",
    "description": "VSCode Extension for OpenShift",
    "version": "0.0.1",
    "publisher": "RedHat",
    "engines": {
        "vscode": "^1.25.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.sayHello"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.sayHello",
                "title": "Hello World"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "openshiftView",
                    "title": "OpenShift",
                    "icon": "images/logo.svg"
                }
            ]
        },
        "views": {
            "openshiftView": [
                {
                    "id": "openshiftProjectExplorer",
                    "name": "OpenShift Projects"
                },
                {
                    "id": "extension.vsKubernetesExplorer",
                    "name": "Clusters"
                }
            ]

        }
    },
    "extensionDependencies": [
        "ms-kubernetes-tools.vscode-kubernetes-tools"
    ],
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
